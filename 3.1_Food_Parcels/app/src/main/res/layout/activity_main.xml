<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".MainActivity">
    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
    >



        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">
            <TextView
                    android:text="@string/main_title"
                    android:textSize="32dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/LabelText"
                    android:paddingBottom="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/main_title"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cheeseburger"
                    android:id="@+id/hamburger"/>
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/bahn_mi"
                    android:id="@+id/bahnmi"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
            <TextView
                    android:text=""
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_1_name"/>
            <TextView
                    android:text=""
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_2_name"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                    android:text=""
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_1_date_obtained"/>
            <TextView
                    android:text=""
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_2_date_obtained"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/dumplings"
                    android:id="@+id/dumplings"/>
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ben_and_jerrys"
                    android:id="@+id/icecream"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                    android:text=""
                    android:gravity="center"
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_3_name"/>
            <TextView
                    android:text=""
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_4_name"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
            <TextView
                    android:text=""
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_3_date_obtained"/>
            <TextView
                    android:text=""
                    style="@style/LabelText"
                    android:layout_height="wrap_content" android:id="@+id/item_4_date_obtained"/>
        </TableRow>

    </TableLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>